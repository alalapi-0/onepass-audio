# 本地（Windows）端配置
LOCAL_USER=ASUS
LOCAL_HOME=C:\Users\ASUS
LOCAL_AUDIO=E:\onepass\data\audio     # 你的“既有”音频目录
LOCAL_JUNCTION_NAME=onepass_audio     # 可选：在 %LOCAL_HOME% 下创建一个联结，指向 LOCAL_AUDIO

# 远端（Linux）端配置
VPS_HOST=your.vps.ip.or.name
VPS_USER=ubuntu
VPS_SSH_KEY=C:\Users\ASUS\.ssh\id_rsa
VPS_REMOTE_DIR=/home/ubuntu/onepass
VPS_MOUNT_POINT=/home/ubuntu/onepass/data/audio   # sshfs 挂载点

# 反向隧道参数
REVERSE_SSHD_PORT=2222   # 在 VPS 上开一个本地端口映射回“你本机的 22”
KEEPALIVE_SECS=30

# ASR 参数默认（可留空走 asr_batch.py 默认）
ASR_MODEL=medium
ASR_LANGUAGE=zh
ASR_DEVICE=auto
ASR_COMPUTE=auto
ASR_WORKERS=1
AUDIO_PATTERN=*.m4a,*.wav,*.mp3,*.flac
