# 远端 SSH
VPS_HOST=your.vps.ip.or.name
VPS_USER=ubuntu
VPS_SSH_KEY=C:\Users\YOU\.ssh\id_rsa
VPS_REMOTE_DIR=/home/ubuntu/onepass

# 本地/远端目录
LOCAL_AUDIO=onepass/data/audio            # 相对当前项目根
REMOTE_AUDIO=/home/ubuntu/onepass/data/audio
REMOTE_ASR_JSON=/home/ubuntu/onepass/data/asr-json
REMOTE_LOG_DIR=/home/ubuntu/onepass/out

# 传输优先策略
USE_RSYNC_FIRST=true          # true|false
BWLIMIT_Mbps=0                # 0 表示不限速
CHECKSUM=true                 # rsync 优先用校验去重（慢但精准）；false 用 mtime/size

# ASR 参数（可留空走默认）
ASR_MODEL=medium
ASR_LANGUAGE=zh
ASR_DEVICE=auto
ASR_COMPUTE=auto
ASR_WORKERS=1
AUDIO_PATTERN=*.m4a,*.wav,*.mp3,*.flac
